---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { Image } from 'astro:assets';
import blogPlaceholder3 from '../assets/insights/blog-placeholder-3.jpg';
import blogPlaceholder4 from '../assets/insights/blog-placeholder-4.jpg';
import blogPlaceholder5 from '../assets/insights/blog-placeholder-5.jpg';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

type Props = CollectionEntry<'insights'>['data'];

const { title, description, pubDate, heroImage } = Astro.props;

const heroImageMap = {
  '/assets/insights/blog-placeholder-3.jpg': blogPlaceholder3,
  '/assets/insights/blog-placeholder-4.jpg': blogPlaceholder4,
  '/assets/insights/blog-placeholder-5.jpg': blogPlaceholder5,
};
const image = heroImage ? heroImageMap[heroImage] : undefined;
---

<html lang="en">
  <head>
    <BaseHead title={title || SITE_TITLE} description={description || SITE_DESCRIPTION} />
    <style>
      main { width: calc(100% - 2rem); max-width: 100%; margin: 0; }
      .hero-image { width: 100%; max-width: 960px; margin: 0 auto 2rem auto; }
      .hero-image img, .hero-image picture { display: block; width: 100%; height: auto; border-radius: 12px; box-shadow: var(--box-shadow); max-width: 100%; }
      .prose { width: 960px; max-width: calc(100% - 2rem); margin: auto; padding: 1em; color: rgb(var(--gray-dark)); }
      .title { margin-bottom: 1em; padding: 1em 0; text-align: center; line-height: 1; }
      .title h1 { margin: 0 0 0.5em 0; }
      .meta { margin-bottom: 0.5em; color: rgb(var(--gray)); }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <article>
        <div class="hero-image">
          {image && (
            <Image src={image} alt={`Cover image for: ${title}`} width={960} height={540} style="width:100%;height:auto;border-radius:12px;box-shadow:var(--box-shadow);" />
          )}
        </div>
        <div class="prose">
          <div class="title">
            <div class="meta"><FormattedDate date={pubDate} /></div>
            <h1>{title}</h1>
            <hr />
          </div>
          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
  </html>


