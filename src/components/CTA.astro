---
// CTA Component - Call to Action section
import { Image } from "astro:assets";
import thirtyMinuteIcon from "../assets/insights/30-minute.png";
import reportIcon from "../assets/insights/report.png";
import diplomaIcon from "../assets/insights/diploma.png";
---

<section class="ws_cta">
  <h2>âš¡ Kickstart Your Project Today</h2>
  <div class="ws_cta-content">
    <div class="ws_cta-left">
      <p>
        Book a quick call to share your goals. I'll provide a free design
        and technical review, along with practical recommendations to move
        your project forward.
      </p>
      <a class="btn" href="#book">Make An Appointment</a>
    </div>
    <div class="ws_cta-right">
      <ul>
        <li>
          <Image src={thirtyMinuteIcon} alt="30-minute call" width={40} height={40} />
          <span>30-minute call</span>
        </li>
        <li>
          <Image src={reportIcon} alt="Action report" width={40} height={40} />
          <span>Action report</span>
        </li>
        <li>
          <Image src={diplomaIcon} alt="Professional expertise" width={40} height={40} />
          <span>Professional expertise</span>
        </li>
      </ul>
    </div>
  </div>
</section>

<style>
  .ws_cta {
    background: black;
    color: #fff;
    border-radius: 16px;
    padding: 2rem;
    margin: 2rem 0 0;
    position: relative;
    overflow: hidden;
  }
  
  .ws_cta h2 {
    color: #fff;
    margin-bottom: 1.5rem;
  }
  
  .ws_cta-content {
    display: flex;
    gap: 2rem;
    align-items: flex-start;
  }
  
  .ws_cta-left {
    flex: 2; /* Takes more space for content */
  }
  
  .ws_cta-right {
    flex: 1; /* Takes less space for list */
  }
  
  .ws_cta-right ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .ws_cta-right li {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    margin-bottom: 1.5rem;
  }
  
  .ws_cta-right li img {
    max-width: 40px;
    max-height: 40px;
    width: auto;
    height: auto;
    margin-bottom: 0.5rem;
  }
  
  .ws_cta-right li span {
    font-size: 0.9rem;
    line-height: 1.3;
  }

  @media (max-width: 900px) {
    .ws_cta-content {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>
