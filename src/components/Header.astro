<style>
  header {
    margin: 0;
    background: rgba(255,255,255,0.92);
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
    position: sticky;
    top: 0;
    z-index: 1000;
    border-bottom: 1px solid rgba(var(--gray-light), 1);
    backdrop-filter: saturate(160%) blur(8px);
  }
  nav h2 {
    padding: 0;
  }
  h2 {
    margin: 0;
    font-size: 1em;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: var(--ws-desktop-width);
    width: 100%;
    padding-left: 1rem;
    padding-right: 1rem;
    margin-left: auto;
    margin-right: auto;
    min-height: 64px;
  }
  .internal-links a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  .internal-links a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }
  .header-cta { margin-left: 0.5rem; }
  .header-cta .btn { padding: .7rem 1rem; min-height: 40px; line-height: 1; }
  .menu-toggle { display: none; background: transparent; border: 0; font-size: 1.5rem; line-height: 1; padding: .5rem; cursor: pointer; }
  .social-links,
  .social-links a {
    display: flex;
  }
  @media (max-width: 720px) {
    .social-links { display: none; }
    .menu-toggle { display: inline-flex; }
    .internal-links { display: none; position: absolute; right: 1rem; top: 64px; background: #fff; border: 1px solid rgb(var(--gray-light)); border-radius: 8px; padding: .5rem 1rem; flex-direction: column; box-shadow: 0 6px 18px rgba(0,0,0,.08); }
    header.open .internal-links { display: flex; }
    nav { position: relative; }
  }
</style>
<script>
  const toggle = document.querySelector('.menu-toggle');
  const headerEl = document.querySelector('header');
  toggle?.addEventListener('click', () => {
    const isOpen = headerEl?.classList.toggle('open');
    if (toggle) toggle.setAttribute('aria-expanded', String(!!isOpen));
  });
</script>
