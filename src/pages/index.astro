---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`Home | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <style>
      .container {
        width: var(--ws-desktop-width);
        max-width: calc(100% - 2rem);
        margin: 0 auto;
      }
      .hero {
        display: grid;
        grid-template-columns: 1.1fr 0.9fr;
        gap: 2rem;
        align-items: center;
        padding: 4rem 0 2.5rem;
      }
      .hero h1 {
        font-size: clamp(2.2rem, 5vw, 3.4rem);
      }
      .hero em {
        color: var(--accent);
        font-style: normal;
      }
      .hero .cta-row {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
        margin-top: 1.25rem;
      }
      .btn {
        display: inline-flex;
        align-items: center;
        gap: .5rem;
        background: var(--accent);
        color: #111;
        padding: .85rem 1.1rem;
        border-radius: 999px;
        text-decoration: none;
        font-weight: 600;
      }
      .btn.secondary {
        background: #1f37ff;
        color: #fff;
      }
      .ratings {
        display: flex;
        gap: 1.5rem;
        margin-top: 1.25rem;
        align-items: center;
        flex-wrap: wrap;
        opacity: .9;
        font-size: .95rem;
      }
      .badge { display:flex; align-items:center; gap:.5rem; background:#fff; border:1px solid rgb(var(--gray-light)); padding:.5rem .75rem; border-radius:10px; }
      .badge img { width:32px; height:32px; }
      .hero-img {
        border-radius: 16px;
        overflow: hidden;
        box-shadow: var(--box-shadow);
      }

      /* Services */
      .services {
        padding: 1rem 0 2rem;
      }
      .services h2 span { color: var(--accent); }
      .service-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1rem;
        margin-top: 1.5rem;
      }
      .card {
        background: #fff;
        border: 1px solid rgb(var(--gray-light));
        border-radius: 12px;
        padding: 1rem;
        box-shadow: 0 2px 6px rgba(0,0,0,.04);
      }
      .card .more { display:inline-block; margin-top:.5rem; color:#1f37ff; font-weight:600; font-size:.95rem; }
      .card .icon {
        width: 44px; height: 44px; border-radius: 10px; background: #f2f4ff;
        display: grid; place-items: center; font-size: 22px; margin-bottom: .75rem;
      }

      /* Priority */
      .priority {
        display: grid; gap: 2rem; align-items: center;
        grid-template-columns: 1fr 1fr; padding: 2rem 0;
      }
      .priority .box { background: #fff; border: 1px solid rgb(var(--gray-light)); padding: 1.25rem; border-radius: 12px; }

      /* About + Video */
      .about {
        display: grid; gap: 2rem; grid-template-columns: 1fr 1fr; align-items: center; padding: 2rem 0;
      }
      .play {
        position: relative; display: block;
      }
      .play::after {
        content: '‚ñ∂'; position: absolute; inset: 0; margin: auto; width: 64px; height: 64px; display: grid; place-items: center; background: #fff; color: #1f37ff; border-radius: 999px; box-shadow: var(--box-shadow);
      }

      /* Stats / testimonial */
      .stats { display: grid; grid-template-columns: 1fr 1fr; gap: 2rem; align-items: start; padding: 2rem 0; }
      .testi { background: #fff; border: 1px solid rgb(var(--gray-light)); padding: 1rem; border-radius: 12px; }

      /* Blog preview */
      .blog { padding: 2rem 0; }
      .blog-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 1rem; margin-top: 1rem; }

      /* CTA */
      .cta {
        background: #1f37ff;
        color: #fff;
        border-radius: 16px;
        padding: 2rem 2rem 2rem 2rem;
        margin: 2rem 0 0;
        position: relative;
        overflow: hidden;
      }
      .cta .row { display:flex; gap:1rem; flex-wrap: wrap; margin-top: 1rem; }
      .cta .btn { background: #fff; color: #1f37ff; }
      .cta img.tools { position: absolute; right: 1rem; bottom: 0; width: min(520px, 40%); pointer-events: none; }

      @media (max-width: 900px) {
        .hero { grid-template-columns: 1fr; }
        .priority, .about, .stats { grid-template-columns: 1fr; }
        .service-grid { grid-template-columns: repeat(2, 1fr); }
        .blog-grid { grid-template-columns: 1fr; }
      }
    </style>
    <main>
      <div class="container">
        <!-- Hero -->
        <section class="hero">
          <div>
            <h1>
              Professional <em>Cleaning</em><br />
              Services in Auburn.
            </h1>
            <p>Award winning cleaning-service company.</p>
            <div class="cta-row">
              <a class="btn" href="tel:+1-394-496-9993">Call: +1-394-496-9993</a>
              <a class="btn secondary" href="#book">Make An Appointment</a>
            </div>
            <div class="ratings">
              <span class="badge"><img src="/images/home/2.svg" alt="Trustpilot"/> 4.7 Out of 5</span>
              <span class="badge"><img src="/images/home/1.svg" alt="Capterra"/> 4.8 Out of 5</span>
            </div>
          </div>
          <div class="hero-img">
            <img src="/images/cleaner/1.NwapmTca_23Yc3w.webp" alt="Cleaner at work" />
          </div>
        </section>

        <!-- Services -->
        <section class="services">
          <h2>We provide our best <span>cleaning</span> services for you</h2>
          <div class="service-grid">
            <div class="card"><div class="icon">üè†</div><strong>House Cleaning</strong><span class="more">Discover More ‚Üí</span></div>
            <div class="card"><div class="icon">ü™ü</div><strong>Window Cleaning</strong><span class="more">Discover More ‚Üí</span></div>
            <div class="card"><div class="icon">üêú</div><strong>Pest Control</strong><span class="more">Discover More ‚Üí</span></div>
            <div class="card"><div class="icon">üßΩ</div><strong>Floor Cleaning</strong><span class="more">Discover More ‚Üí</span></div>
          </div>
        </section>

        <!-- Priority -->
        <section class="priority">
          <img src="/images/cleaner/2.CVWjnGRr_Z2tfwoR.webp" alt="Cozy living room" />
          <div class="box">
            <img src="/images/home/about/badge.svg" alt="About badge" style="width:64px;height:64px; margin-bottom:.5rem;" />
            <h2>Your <em style="color:var(--accent);font-style:normal;">comfort</em> is our main priority</h2>
            <p>We appreciate your trust greatly. Our clients choose our clinic because they know we are the best in the field.</p>
            <p><strong>Mon‚ÄìFri:</strong> 9AM ‚Äì 22 PM ‚Ä¢ <strong>Saturday:</strong> 9AM ‚Äì 20 PM</p>
            <p><a class="btn" href="tel:+1-394-496-9993">Call: +1-394-496-9993</a></p>
          </div>
        </section>

        <!-- About + Video -->
        <section class="about">
          <div>
            <h2>Best <span style="color:var(--accent)">cleaning</span> company in the town</h2>
            <p>Our professional clean office offers the whole range of dentistry services: treatment of caries, gum disease, tooth whitening, titanium dental implants, veneers, and more.</p>
          </div>
          <a class="play" aria-label="Play company video">
            <img src="/images/cleaner/2.BJU5WfDB_2ng9FX.webp" alt="Cleaning video cover" />
          </a>
        </section>

        <!-- Stats + Testimonial -->
        <section class="stats">
          <div>
            <h3>4035</h3>
            <p>Happy Customers & Counting</p>
          </div>
          <div class="testi">
            <p>‚ÄúCleaner is the best service I have ever got! Professional, wide range of cleaning services, from home cleaning to office cleaning. They used advanced technologies to keep our room looking the best.‚Äù</p>
            <p><strong>Jack Morrison</strong> ‚Äî New York</p>
          </div>
        </section>

        <!-- Blog preview -->
        <section class="blog">
          <h2>Our latest news from blog</h2>
          <div class="blog-grid">
            <a href="/insights/" class="card"><img src="/images/cleaner/1.uciVmc4k_GBebQ.webp" alt="Latest 1" /><p>The secret of cleaning your kitchen.</p></a>
            <a href="/insights/" class="card"><img src="/images/cleaner/2.B1wqs21m_1Jd2z9.webp" alt="Latest 2" /><p>How to clean wooden floors without creating dust.</p></a>
            <a href="/insights/" class="card"><img src="/images/cleaner/1.tmpiUXXN_Z3VNRz.webp" alt="Latest 3" /><p>The secret of cleaning your wooden furniture.</p></a>
          </div>
        </section>

        <!-- CTA -->
        <section class="cta">
          <h2>Discuss our services or make an appointment</h2>
          <p>We know details are worth it, so don't hesitate to reach out. We will get back to you to make an appointment within two business days.</p>
          <div class="row">
            <a class="btn" href="tel:+1-394-496-9993">Call: +1-394-496-9993</a>
            <a class="btn" href="#book">Make An Appointment</a>
          </div>
          <img class="tools" src="/images/cleaner/cta.BP09K7ZU_ZLmWKA.webp" alt="Cleaning tools" />
        </section>
      </div>
    </main>
    <Footer />
  </body>
</html>
