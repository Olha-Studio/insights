---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE } from '../../consts';
import { getCollection } from 'astro:content';

const cases = (await getCollection('insights')).filter(p => (p.data.tags || []).includes('cases'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<html lang="en">
  <head>
    <BaseHead title={`Cases | ${SITE_TITLE}`} description="Selected case studies and UX outcomes." />
    <style>
      main { width: 100%; max-width: var(--ws-desktop-width); margin: 0 auto; padding: 0 1rem; }
      ul { list-style: none; margin: 0; padding: 0; display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 1rem; }
      li { border: 1px solid #eee; border-radius: 12px; padding: 1rem; }
      a { text-decoration: none; color: inherit; display: block; }
      h2 { margin: 0 0 .5rem 0; }
      p { margin: 0; }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <h1>Cases</h1>
      <ul>
        {cases.map(post => (
          <li>
            <a href={`/cases/${post.id}/`}>
              <h2>{post.data.title}</h2>
              <p>{post.data.description}</p>
            </a>
          </li>
        ))}
      </ul>
    </main>
    <Footer />
  </body>
</html>


