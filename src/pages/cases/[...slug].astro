---
import { type CollectionEntry, getCollection, render } from 'astro:content';
import CasePost from '../../layouts/CasePost.astro';

export async function getStaticPaths() {
  const posts = (await getCollection('insights')).filter(p => (p.data.tags || []).includes('cases'));
  return posts.map((post) => ({
    params: { slug: post.id },
    props: post,
  }));
}

type Props = CollectionEntry<'insights'>;

const post = Astro.props;
const { Content } = await render(post);
---

<CasePost {...post.data}>
  <Content />
</CasePost>


