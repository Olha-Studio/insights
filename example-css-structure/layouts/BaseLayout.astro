---
const { title = "Astro + Vanilla CSS Starter", description = "Tokens + layers + utilities + components", } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <!-- Order matters: layers first, then each stylesheet -->
    <link rel="stylesheet" href="/src/styles/layers.css" />
    <link rel="stylesheet" href="/src/styles/reset.css" />
    <link rel="stylesheet" href="/src/styles/tokens.css" />
    <link rel="stylesheet" href="/src/styles/base.css" />
    <link rel="stylesheet" href="/src/styles/utilities.css" />
    <link rel="stylesheet" href="/src/styles/components/button.css" />
    <link rel="stylesheet" href="/src/styles/components/card.css" />
    <link rel="stylesheet" href="/src/styles/components/prose.css" />
  </head>
  <body>
    <header class="container py-6 flex items-center justify-between">
      <a href="/" class="fw-600">OLHA</a>
      <nav class="flex gap-4">
        <a href="/blog">Blog</a>
        <a href="/about">About</a>
      </nav>
      <button class="c-btn c-btn--primary">Subscribe</button>
    </header>
    <main class="container stack">
      <slot />
    </main>
    <footer class="container py-6 mt-4">
      <p class="muted">&copy; {new Date().getFullYear()} OLHA</p>
    </footer>
  </body>
</html>